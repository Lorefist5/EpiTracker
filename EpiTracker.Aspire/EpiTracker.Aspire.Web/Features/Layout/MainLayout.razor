@using MudBlazor
@inherits LayoutComponentBase



<MudLayout>
    <!-- AppBar -->
    <MudAppBar Elevation="0" Dense="false" Color="Color.Primary" Class="mud-width-full">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Edge="Edge.Start" Color="Color.Inherit" OnClick="ToggleDrawer" />
        <MudText Typo="Typo.h6" Class="text-white ml-3">Epidemiology Tracker</MudText>
    </MudAppBar>

    <!-- Drawer Navigation Menu -->
    <MudDrawer @bind-Open="_drawerOpen" Breakpoint="Breakpoint.Xxl" ClipMode="DrawerClipMode.Never" Elevation="1" Color="Color.Dark">
        <MudNavMenu>
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            <MudNavLink Href="individuals" Icon="@Icons.Material.Filled.People">Individuals</MudNavLink>
            <MudNavLink Href="individuals/statistics" Icon="@Icons.Material.Filled.BarChart">Individuals Statistics</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <!-- Main Content -->
    <MudMainContent>
        <MudThemeProvider IsDarkMode="true" />
        <MudPopoverProvider />
        <MudDialogProvider />
        <MudSnackbarProvider />

        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = false;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
